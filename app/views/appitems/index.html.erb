<div class="home-box">
  <% if !user_signed_in?%>
  <div  class='test'><%= link_to 'Sign In', new_user_session_path %></div>
  <% end %>
  <% if user_signed_in?%>
  <h3 class='greeting'>Welcome <%= current_user.email%></h3>
    <div class="appitems-list-box">
      <div id="appitems" data-controller='drag'>
        <% @appitems.each do |appitem| %>
        <% if  appitem.default_status==='Yes'%>
          <div class="app-item-box" style='background-color:<%= appitem.color%>'>
          <%= render appitem %>
            <p>
              <%= link_to "Delete", edit_appitem_path(appitem), class:'delete-button'%> 
              <%# <%= button_to "Delete", appitem, method: :delete %> 
              <%# <%= link_to "Show this appitem", appitem %> 
            </p>
          </div>
          <%end%>
        <% end %>
      </div>
      <div class="list-box">
        <ul><h3 class='list-title'>Available Apps</h3>
          <% @appitems.each do |appitem| %>
          <% if  appitem.default_status==='No' %>
            <li class='applist-item'><%=appitem.name%></li>
            <%= link_to "Add", edit_appitem_path(appitem) %>         
            <%end%>
          <%end%>
        </ul>
          <% end %>
      </div>
    </div>
  <%# <%= link_to "New appitem", new_appitem_path %>
</div>
